<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textDirection="rtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/womenStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الحالة الاجتماعية للنساء"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/womenStatusSingle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="عزباء"
                app:layout_constraintTop_toBottomOf="@id/womenStatus" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/womenStatusDivorced"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="مطلفة"
                app:layout_constraintTop_toBottomOf="@id/womenStatusSingle" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/womenStatusNoHusband"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="أرملة"
                app:layout_constraintTop_toBottomOf="@id/womenStatusSingle" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:id="@+id/menStatus"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الحالة الاجتماعية للرجال"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/menStatusWife"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="متزوج"
                app:layout_constraintTop_toBottomOf="@id/womenStatusSingle" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/menStatusSingle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="أعزب"
                app:layout_constraintTop_toBottomOf="@id/womenStatus" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/menStatusDivorced"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="مطلق"
                app:layout_constraintTop_toBottomOf="@id/womenStatusSingle" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/menStatusNoWife"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="أرمل"
                app:layout_constraintTop_toBottomOf="@id/womenStatusSingle" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>